{
  "backlight": {
    "format": "{icon}",
    "format-icons": [
      "󰃞",
      "󰃝",
      "󰃟",
      "󰃟",
      "󰃠"
    ],
    "on-scroll-down": "brightnessctl -c backlight set 5%-",
    "on-scroll-up": "brightnessctl -c backlight set 5%+",
    "on-click": "/etc/xdg/waybar/scripts/light.sh $(cat /tmp/SUNSET_CHANGE_STATE_VAR)",
    "states": {
      "low": 25,
      "medium": 50,
      "high": 75
    },
    "tooltip": true,
    "tooltip-format": "Brightness: {percent}%"
  }
}
